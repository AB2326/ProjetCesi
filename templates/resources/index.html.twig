<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="resources.css">
</head>
<body>
<div class="container">
    <div class="menu">
        <button class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal">
            <i class="fas fa-upload"></i> Publier</button>
        <button class="btn btn-primary"><i class="fas fa-image"></i></button>
        <button class="btn btn-primary"><i class="fas fa-link"></i></button>
    </div>
    {% for resource in resources %}
        <div class="row">
            <div class="col-md-6">
                <div class="article">
                    <h2>{{ resource.title }}</h2>
                    <p>{{ resource.content }}</p>
                    <div class="buttons">
                        <button class="like-button btn btn-primary"><i class="fas fa-thumbs-up"></i></button>
                        <button class="dislike-button btn btn-danger"><i class="fas fa-thumbs-down"></i></button>
                        <button class="favorite-button btn btn-warning"><i class="fas fa-star"></i></button>
                    </div>
                    <div class="consulter">
                        <button class="view-more-button btn btn-success">View More</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<!-- Modal -->
{% include 'modal/publish.html.twig' %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
