<!DOCTYPE html>
{% block stylesheet %}
<style>
    .article {
        border: 1px solid #ccc;
        margin-bottom: 20px;
        padding: 10px;
        background-color: white;
    }

    .article .entete h2 {
        margin: 0;
        color: #0056b3;
    }

    .article-content {
        margin-top: 10px;
        word-wrap: break-word;
    }

    .buttons button {
        margin-right: 5px;
    }

    .consulter .view-more-button {
        margin-top: 10px;
    }
</style>
{% endblock %}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
<div class="container">
    {%  if app.user %}

        <div class="menu" style="margin-left: -200px;">
            <a href="{{ path('create_resource')}}" class="btn btn-success">Publier</a>
            <button class="btn btn-primary"><i class="fas fa-image"></i></button>
            <button class="btn btn-primary"><i class="fas fa-link"></i></button>
        </div>

    {% endif %}
    {% for resource in resources %}
        {% if resource.deletedAt == null %}
        <div class="row">
            <div class="col-md-6">
                <div class="article">
                    <div class="entete d-flex justify-content-between">
                        <h2>{{ resource.title }}</h2>
                        {% if app.user %}
                            <a href="{{ path('app_deleteResource', {'id': resource.id}) }}" class="delete-button btn btn-danger"><i class="fas fa-trash"></i></a>
                        {% endif %}
                    </div>

                    <div class="article-content" style="width: 500px; word-wrap: break-word; margin-top:20px; margin-bottom: 20px; ">
                        {% set words = resource.content | split(' ') %}
                        {{ words | slice(0, 30) | join(' ') }}{% if words|length > 30 %} ...{% endif %}
                    </div>
                    {% if app.user %}
                        <div class="buttons d-flex justify-content-end">
                            <button class="like-button btn btn-primary"><i class="fas fa-thumbs-up"></i></button>
                            <button class="dislike-button btn btn-danger"><i class="fas fa-thumbs-down"></i></button>
                            <button class="favorite-button btn btn-warning"><i class="fas fa-star"></i></button>
                        </div>

                    {% endif %}

                    <div class="consulter" style="display: flex; justify-content: space-between; align-items: center;">
                        <a href="{{ path('resource_page', {'id': resource.id}) }}" class="view-more-button btn btn-success">Voir plus</a>
                    </div>

                </div>
            </div>
        </div>{% endif %}
    {% endfor %}
</div>


</body>
</html>
