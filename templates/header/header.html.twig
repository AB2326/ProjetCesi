<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}(RE)SOURCES RELATIONNELLES!{% endblock %}</title>
    <header>
        <div class="container-fluid navbar">
            <a class="navbar-brand" href="/">
                <span class="navbar-brand-text">(RE)SOURCES RELATIONNELLES!</span>
            </a>
            {% if not app.user %}
                <div class="snackbar">VOUS N'ETES PAS CONNECTE, VOTRE ACCES AU SITE EST RESTREINT !</div>
            {% endif %}
            <div class="accessibility-button">
                <span>Accessibilité</span>
                <a href="#" class="accessibility-trigger"><i class="fas fa-lightbulb"></i></a>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #0055a4;">
            <div class="container-fluid">
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>

                <div class="d-flex">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-light me-2">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-light me-2">Connexion</a>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-light me-2">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
</head>
<body>
{% block body %}
{% endblock %}
</body>

{% block stylesheets %}
    <style>
        .snackbar {
            visibility: visible; /* Make the snackbar visible by default */
            min-width: 250px;
            margin-left: -125px;
            background-color: red; /* Change the background color to red */
            color: #fff;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: fixed;
            z-index: 1;
            left: 50%;
            bottom: 30px;
            font-size: 17px;
        }

        .blue-background {
            background-color: blue !important;
        }
        .yellow-text {
            color: yellow !important;
        }

    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const accessibilityButton = document.querySelector('.accessibility-trigger');

            accessibilityButton.addEventListener('click', function() {
                document.body.classList.toggle('blue-background');
                const articles = document.querySelectorAll('.article');

                articles.forEach(function(article) {
                    article.classList.toggle('yellow-text');
                });
            });
        });


    </script>
{% endblock %}
</html>
