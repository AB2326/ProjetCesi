{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
<style>
/* Mise en page générale */
body {
    background-color: #f0f2f5;
    font-family: 'Arial', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

/* Conteneur du formulaire */
.form-signin {
    background-color: #ffffff;
    padding: 50px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    width: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* Titre du formulaire */
.form-signin h1 {
    font-size: 24px;
    color: #333;
    margin-bottom: 25px;
}

/* Champs de formulaire */
.form-signin input[type="text"],
.form-signin input[type="password"] {
    width: 100%;
    padding: 12px;
    margin-bottom: 20px;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
}

/* Bouton */
.form-signin button {
    width: 100%;
    padding: 10px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 18px;
    margin-top: 10px; /* Espacement avant le bouton */
}

/* Style des étiquettes */
.form-signin label {
    align-self: flex-start;
    margin-bottom: 5px;
    font-size: 16px;
    color: #444;
}

/* Style des checkbox */
.checkbox label {
    font-size: 14px;
    color: #666;
}
</style>
{% endblock %}


{% block body %}
    <div class="form-signin">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1>Connexion</h1>
            <label for="inputUsername">Identifiant</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <button type="submit">Se connecter</button>
        </form>

        <p>Accéder au site en version restreinte :
            <a href="{{ path('app_home') }}">Accès restreint</a>
    </div>
{% endblock %}
