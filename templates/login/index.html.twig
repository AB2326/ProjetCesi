{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <style>
        /* Resetting default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Setting default styles */
        html, body {
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #f0f2f5; /* Light background color */
        }

        /* Main container wrapping all login content */
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
        }

        /* Login form style */
        .login-form {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-right: 20px; /* Space between form and info panel */
            width: 360px; /* Fixed width for the form */
        }

        /* Info panel style */
        .info-panel {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 360px; /* Fixed width for the info panel */
        }

        /* Styles for form rows, including space between elements */
        .form-row {
            margin-bottom: 20px;
            padding: 5px;
        }

        /* Custom input field */
        .input-field input {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            margin-right:20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Custom submit button */
        .submit-btn {
            width: 100%;
            padding: 10px;
            background-color: #0056b3;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #004494;
        }

        /* Headings in the form and info panel */
        h1, h2 {
            color: #333;
        }

        /* Media queries to adapt to smaller screens */
        @media (max-width: 768px) {
            .login-container {
                flex-direction: column;
                align-items: stretch;
            }

            .login-form, .info-panel {
                width: 100%; /* Full width on small screens */
                margin-right: 0; /* Remove right margin on small screens */
            }
        }
    </style>
{% endblock %}

{% block body %}
    <main class="login-container">
        <div class="login-form">
            <h1>Connexion</h1>
            {{ form_start(form) }}
            <div class="form-row">
                {{ form_row(form.email, { 'label': 'Adresse email' }) }}
            </div>
            <div class="form-row">
                {{ form_row(form.firstPassword, { 'label': 'Mot de passe' }) }}
            </div>
            <div class="form-row">
                <button type="submit" class="submit-btn">Connexion</button>
            </div>
            {{ form_end(form) }}

            {{error}}
        </div>
    </main>
{% endblock %}

